<?xml version="1.0" encoding="UTF-8"?>
<taglib xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://java.sun.com/xml/ns/javaee"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-jsptaglibrary_2_1.xsd"
        version="2.1">

    <tlib-version>1.0</tlib-version>
    <short-name>tridion-xpm</short-name>
    <uri>http://www.sdl.com/tridion-xpm</uri>

    <tag>
        <name>button</name>
        <tag-class>com.sdl.webapp.common.impl.taglib.xpm.XpmButtonTag</tag-class>
        <body-content>JSP</body-content>
        <attribute>
            <name>region</name>
            <required>true</required>
            <rtexprvalue>true</rtexprvalue>
            <type>com.sdl.webapp.common.api.model.RegionModel</type>
        </attribute>
		<attribute>
			<name>cssClass</name>
			<required>false</required>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
    </tag>

    <tag>
        <name>if-enabled</name>
        <tag-class>com.sdl.webapp.common.impl.taglib.xpm.XpmIfEnabledTag</tag-class>
        <body-content>JSP</body-content>
    </tag>
    <tag>
        <name>page</name>
        <tag-class>com.sdl.webapp.common.impl.taglib.xpm.XpmPageMarkupTag</tag-class>
        <body-content>empty</body-content>
        <attribute>
            <name>page</name>
            <required>true</required>
            <rtexprvalue>true</rtexprvalue>
            <type>com.sdl.webapp.common.api.model.PageModel</type>
        </attribute>
    </tag>

    <tag>
        <name>region</name>
        <tag-class>com.sdl.webapp.common.impl.taglib.xpm.XpmRegionMarkupTag</tag-class>
        <body-content>empty</body-content>
        <attribute>
            <name>region</name>
            <required>true</required>
            <rtexprvalue>true</rtexprvalue>
            <type>com.sdl.webapp.common.api.model.RegionModel</type>
        </attribute>
    </tag>

    <tag>
        <name>entity</name>
        <tag-class>com.sdl.webapp.common.impl.taglib.xpm.XpmEntityMarkupTag</tag-class>
        <body-content>empty</body-content>
        <attribute>
            <name>entity</name>
            <required>true</required>
            <rtexprvalue>true</rtexprvalue>
            <type>com.sdl.webapp.common.api.model.EntityModel</type>
        </attribute>
    </tag>

    <tag>
        <name>property</name>
        <tag-class>com.sdl.webapp.common.impl.taglib.xpm.XpmPropertyMarkupTag</tag-class>
        <body-content>empty</body-content>
        <attribute>
            <name>entity</name>
            <required>true</required>
            <rtexprvalue>true</rtexprvalue>
            <type>com.sdl.webapp.common.api.model.EntityModel</type>
        </attribute>
        <attribute>
            <name>property</name>
            <required>true</required>
            <rtexprvalue>true</rtexprvalue>
        </attribute>
        <attribute>
            <name>index</name>
            <required>false</required>
            <rtexprvalue>true</rtexprvalue>
            <type>int</type>
        </attribute>
    </tag>
</taglib>
